<!-- Redesigned LoginView.xaml for modern UI/UX -->
<UserControl x:Class="CivilProcessERP.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Subtle background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#e0e7ef" Offset="0"/>
                <GradientStop Color="#c9e7e7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border Width="420" Height="380" CornerRadius="18" Background="White" Padding="32"
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel>
                <!-- Logo area -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,18">
                    <Ellipse Width="48" Height="48" Fill="#007272" VerticalAlignment="Center">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#888"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="Great Lakes Civil Services" FontSize="20" FontWeight="Bold" Foreground="#007272" Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="User Login" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,18" HorizontalAlignment="Center" Foreground="#222"/>
                <!-- Username -->
                <Border CornerRadius="8" Background="#f7fafc" BorderBrush="#c9e7e7" BorderThickness="1.5" Margin="0,0,0,12">
                    <TextBox x:Name="UsernameBox" Height="38" Padding="12,0" FontSize="15" 
                             Background="Transparent" BorderThickness="0" 
                            />
                </Border>
                <!-- Password -->
                <Border CornerRadius="8" Background="#f7fafc" BorderBrush="#c9e7e7" BorderThickness="1.5" Margin="0,0,0,18">
                    <PasswordBox x:Name="PasswordBox" Height="38" Padding="12,0" FontSize="15" 
                                 Background="Transparent" BorderThickness="0" 
                                 Tag="Password"/>
                </Border>
                <!-- Sign In Button -->
                <Border CornerRadius="8" Margin="0,0,0,10">
                    <Button Content="Sign In" Height="44" Click="Login_Click" 
                            Background="#007272" Foreground="White" FontWeight="Bold" FontSize="16" 
                            BorderThickness="0" 
                            />
                </Border>
                <TextBlock x:Name="LoginError" Foreground="#d32f2f" FontSize="13" Margin="0,8,0,0" TextWrapping="Wrap" TextAlignment="Center" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="18" ShadowDepth="4" Color="#888"/>
    </UserControl.Resources>
</UserControl>
