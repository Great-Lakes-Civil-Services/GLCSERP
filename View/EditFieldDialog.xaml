<Window x:Class="CivilProcessERP.Views.EditFieldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Field" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock x:Name="lblTitle" FontWeight="Bold" Margin="0,0,0,10" />

        <TextBlock Text="First Name:" />
        <TextBox x:Name="txtFirstName" Margin="0,0,0,10" />

        <TextBlock Text="Last Name:" />
        <TextBox x:Name="txtLastName" Margin="0,0,0,10" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="0,0,5,0" IsDefault="True" Click="Ok_Click" />
            <Button Content="Cancel" Width="60" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
