<Window x:Class="CivilProcessERP.Views.EditPlaintiffsSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Plaintiffs" Height="400" Width="450">
    <StackPanel Margin="10">
        <TextBox x:Name="txtSearchs" Height="30" Margin="0,0,0,10" TextChanged="txtSearchs_TextChanged"/>
        <ListBox x:Name="lstPlaintiffss" MouseDoubleClick="lstPlaintiffss_MouseDoubleClick" Height="250"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Select" Width="80"  Height="50" Margin="5" Click="Selects_Click"/>
            <Button Content="Other" Width="80" Height="50" Margin="5" Click="Other_Click"/>
            <Button Content="Cancel" Width="80"  Height="50" Margin="5" Click="Cancels_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
 