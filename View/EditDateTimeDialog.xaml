<Window x:Class="CivilProcessERP.Views.EditDateTimeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit DateTime" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock x:Name="lblTitle" FontWeight="Bold" Margin="0,0,0,10" />
        
        <DatePicker x:Name="datePicker" Margin="0,0,0,10" />

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Time:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtTime" Width="80" />
            <TextBlock Text="(HH:mm)" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,5,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
