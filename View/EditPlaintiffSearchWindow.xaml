<Window x:Class="CivilProcessERP.Views.EditPlaintiffSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Plaintiff" Height="400" Width="450">
    <StackPanel Margin="10">
        <TextBox x:Name="txtSearch" Height="30" Margin="0,0,0,10" TextChanged="txtSearch_TextChanged"/>
        <ListBox x:Name="lstPlaintiffs" MouseDoubleClick="lstPlaintiffs_MouseDoubleClick" Height="250"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Select" Width="80"  Height="50" Margin="5" Click="Select_Click"/>
            <Button Content="Cancel" Width="80"  Height="50" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
