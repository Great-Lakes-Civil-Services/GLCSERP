<UserControl x:Class="CivilProcessERP.Views.MainDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="720" Width="1280">

    <Grid Background="#F5F5F5">
        <!-- Define rows: one for top nav, one for main content area -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Top navigation bar -->
            <RowDefinition Height="*"/>    <!-- Main content + sidebar -->
        </Grid.RowDefinitions>

        <!-- Define columns: one for main content (left), one for sidebar (right) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>    <!-- Main content column -->
            <ColumnDefinition Width="1*"/>    <!-- Sidebar column -->
        </Grid.ColumnDefinitions>

        <!-- ✅ Top Navigation Bar (Fixed Title & Evenly Spaced Buttons) -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="White" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>  <!-- Increased width for title -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Image Source="/Assets/logo.png" Height="50"/>
                    <TextBlock Text="Great Lakes Civil Services"
                               FontSize="22" FontWeight="Bold" Foreground="#0078D7"
                               VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>

                <!-- ✅ Improved Navbar Button Alignment -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,0,0">
                    <Button Content="Dashboard" Style="{StaticResource NavButton}" Margin="12,0"/>
                    <Button Content="Administration" Style="{StaticResource NavButton}" Margin="12,0"/>
                    <Button Content="HuronPortal" Style="{StaticResource NavButton}" Margin="12,0"/>
                    <Button Content="Courts" Style="{StaticResource NavButton}" Margin="12,0"/>
                    <Button Content="Clients" Style="{StaticResource NavButton}" Margin="12,0"/>
                    <Button Content="Employee's Corner" Style="{StaticResource NavButton}" Margin="12,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ✅ Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="30">
            <StackPanel>
                <TextBlock Text="Welcome to your Dashboard" 
                           FontSize="28" FontWeight="Bold" Foreground="Black" 
                           Margin="10,10,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Notification Panel -->
                    <Border Grid.Column="0" Width="300" Height="150" Background="White" CornerRadius="8" Margin="10" Padding="15" VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="5"/>
                        </Border.Effect>
                        <StackPanel>
                            <Image Source="/Assets/alert.png" Height="30"/>
                            <TextBlock Text="Notifications" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- ✅ Fixed Search Box Alignment -->
                    <Grid Grid.Column="1" Height="50" Width="350" Margin="10" VerticalAlignment="Top">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
                            <TextBox x:Name="SearchBox"
                                     Height="40"
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     Padding="10"
                                     Foreground="Black"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <TextBox.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Setter Property="Text" Value="Search Jobs"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Text" Value=""/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Border>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- ✅ Sidebar Panel -->
        <StackPanel Grid.Row="1" Grid.Column="1" Background="#027373" Margin="10" VerticalAlignment="Stretch">
            <Button Content="Executions" Style="{StaticResource SidebarButton}" Margin="5"/>
            <Button Content="General Civil" Style="{StaticResource SidebarButton}" Margin="5"/>
            <Button Content="Landlord-Tenant" Style="{StaticResource SidebarButton}" Margin="5"/>
            <Button Content="Evictions" Style="{StaticResource SidebarButton}" Margin="5"/>
            <Button Content="Server MGT" Style="{StaticResource SidebarButton}" Margin="5"/>
            <Button Content="Logistics" Style="{StaticResource SidebarButton}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
