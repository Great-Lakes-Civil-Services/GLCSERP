<Window x:Class="CivilProcessERP.Views.EditProcessServerSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Process Server" Height="500" Width="500"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="10">
        <TextBox x:Name="txtSearch" DockPanel.Dock="Top" Margin="0,0,0,10"
                TextChanged="txtSearch_TextChanged"/>

        <ListBox x:Name="lstServers" DockPanel.Dock="Top" Height="280"
                 MouseDoubleClick="lstServers_MouseDoubleClick"/>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Select" Width="80"  Height="50" Margin="5" Click="Select_Click"/>
            <Button Content="Cancel" Width="80" Height="50"  Margin="5" Click="Cancel_Click"/>
            <Button Content="Other" Width="80" Height="50" Margin="5" Click="Other_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
