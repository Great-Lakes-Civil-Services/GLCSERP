<Window x:Class="CivilProcessERP.Views.EditInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Invoice" Height="375" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Description:" />
        <TextBox x:Name="txtDescription" />

        <TextBlock Text="Quantity:" />
        <TextBox x:Name="txtQuantity" />

        <TextBlock Text="Rate:" />
        <TextBox x:Name="txtRate" />

        <TextBlock Text="Amount:" />
        <TextBox x:Name="txtAmount" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="2" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="60" Margin="2" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
