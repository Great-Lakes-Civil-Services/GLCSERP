<Window x:Class="CivilProcessERP.Views.EditPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Payment" Height="375" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Date:" />
        <TextBox x:Name="txtDate" Margin="0,0,0,10" />

        <TextBlock Text="Time (HH:mm:ss):" />
        <TextBox x:Name="txtTime" Margin="0,0,0,10" />

        <TextBlock Text="Method:" />
        <TextBox x:Name="txtMethod" Margin="0,0,0,10" />

        <TextBlock Text="Description:" />
        <TextBox x:Name="txtDescription" Margin="0,0,0,10" />

        <TextBlock Text="Amount:" />
        <TextBox x:Name="txtAmount" Margin="0,0,0,10" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
