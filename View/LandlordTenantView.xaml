<UserControl x:Class="CivilProcessERP.Views.LandlordTenantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray"
             Height="Auto" Width="Auto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Search & Add Job -->
            <RowDefinition Height="Auto"/> <!-- Section Title -->
            <RowDefinition Height="*"/>  <!-- Main Content Area -->
        </Grid.RowDefinitions>

       <!-- ✅ Search & Add Job Section -->
<StackPanel Orientation="Horizontal" Margin="20" Grid.Row="0">
    <TextBlock Text="Search Job:" FontSize="16" FontWeight="Bold" Margin="5"/>
    <TextBox x:Name="JobSearchBox" 
         Text="{Binding SearchJobNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
         Width="250" Height="40" FontSize="16" />

    <!-- 🔍 Search Button (Wider & More Readable) -->
    <Button Content="🔍 Search Job" Width="150" Height="40" FontSize="16"
            Click="SearchJobButton_Click" Margin="15,0,0,0"
            Background="#0078D7" Foreground="White" FontWeight="Bold"
            Padding="10"/>

    <!-- ➕ Add Job Button (Wider & More Readable) -->
    <Button Content="➕ Add New Job" Width="170" Height="40" FontSize="16"
            Click="AddJobButton_Click" Margin="15,0,0,0"
            Background="#28A745" Foreground="White" FontWeight="Bold"
            Padding="10"/>
</StackPanel>


        <!-- ✅ Section Title -->
        <StackPanel Orientation="Horizontal" Margin="20" Grid.Row="1">
            <TextBlock Text="GLCS > Landlord-Tenant" Foreground="Gray" FontSize="14"/>
        </StackPanel>

        <!-- ✅ Main Content Area -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Left Side -->
                <ColumnDefinition Width="1*"/> <!-- Right Side -->
            </Grid.ColumnDefinitions>

            <!-- ✅ Left Side: Job Search Results -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Job Results" FontSize="18" FontWeight="Bold" Margin="10"/>
                <ListBox x:Name="JobListBox"
                         ItemsSource="{Binding FilteredJobs}" 
                         SelectedItem="{Binding SelectedJob, Mode=TwoWay}"
                         SelectionChanged="JobListBox_SelectionChanged"
                         Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding JobId}" FontWeight="Bold" Margin="5"/>
                                <TextBlock Text="{Binding CaseNumber}" Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- ✅ Right Side Alerts -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" BorderBrush="Black" BorderThickness="2" Margin="10">
                <StackPanel Margin="10">
                    <TextBlock Text="Cases that need attention" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding CasesNeedAttention}" FontSize="16" Foreground="Black"
                             Background="Transparent" BorderThickness="0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
