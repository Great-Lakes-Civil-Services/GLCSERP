<Window x:Class="CivilProcessERP.Views.EditLogEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Entry" Height="350" Width="450" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Date:" />
        <DatePicker SelectedDate="{Binding Date}" />
        
        <TextBlock Text="Time:"/>
        <TextBox Text="{Binding TimeOnly, Mode=TwoWay, StringFormat='t'}" />

        <TextBlock Text="Body:" Margin="0,10,0,0" />
        <TextBox Text="{Binding Body}" AcceptsReturn="True" Height="60" />

        <TextBlock Text="Source:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Source}" />

        <!-- Checkboxes Row -->
        <WrapPanel Margin="0,10,0,0">
            <CheckBox Content="Aff" IsChecked="{Binding Aff}" Margin="5"/>
            <CheckBox Content="DS" IsChecked="{Binding FS}" Margin="5"/>
            <CheckBox Content="Att" IsChecked="{Binding Att}" Margin="5"/>
        </WrapPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="75" Margin="5" IsDefault="True" Click="Save_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
