<Window x:Class="CivilProcessERP.Views.EditLogEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Log Entry" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Edit Log Entry" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <!-- Date -->
        <TextBlock Text="Date:"/>
        <DatePicker x:Name="datePicker" Margin="0,0,0,10"/>

        <!-- Time -->
        <TextBlock Text="Time:"/>
        <TextBox x:Name="txtTime" Margin="0,0,0,10"/>

        <!-- Body -->
        <TextBlock Text="Body:"/>
        <TextBox x:Name="txtBody" Margin="0,0,0,10" AcceptsReturn="True" Height="60"/>

        <!-- Checkboxes -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox x:Name="chkAff" Content="AFF" Margin="5"/>
            <CheckBox x:Name="chkDs" Content="DS" Margin="5"/>
            <CheckBox x:Name="chkAtt" Content="ATTY" Margin="5"/>
        </StackPanel>

        <!-- Source -->
        <TextBlock Text="Source:"/>
        <TextBox x:Name="txtSource" Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,5,0" Click="Ok_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
