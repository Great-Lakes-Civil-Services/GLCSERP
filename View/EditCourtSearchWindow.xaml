<Window x:Class="CivilProcessERP.Views.EditCourtSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Court" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15">
        <TextBox x:Name="txtSearch" Margin="0,0,0,10"  
                 TextChanged="txtSearch_TextChanged"/>

        <ListBox x:Name="lstCourts" Height="250" MouseDoubleClick="lstCourts_MouseDoubleClick"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Select" Width="80" Margin="5" Click="Select_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
