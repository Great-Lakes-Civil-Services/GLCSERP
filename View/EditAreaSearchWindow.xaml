<Window x:Class="CivilProcessERP.Views.EditAreaSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Area" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Search Area" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="txtSearch" Margin="0,0,0,10" TextChanged="txtSearch_TextChanged"/>
        <ListBox x:Name="lstAreas" MouseDoubleClick="lstAreas_MouseDoubleClick" Height="200"/>
        <Button Content="Select" Click="Select_Click" Margin="0,10,0,0" Height="30"/>
        <Button Content="Other" Click="Other_Click" Margin="0,10,0,0" Height="30"/>
    </StackPanel>
</Window>
