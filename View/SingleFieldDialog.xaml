<Window x:Class="CivilProcessERP.Views.SingleFieldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Field" Height="200" Width="400">
    <StackPanel Margin="10">
        <TextBlock x:Name="lblTitle" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBox x:Name="txtValue" Margin="0,0,0,10" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="5,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
