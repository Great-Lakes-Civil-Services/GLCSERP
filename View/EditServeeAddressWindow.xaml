<Window x:Class="CivilProcessERP.Views.EditServeeAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Servee Address" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15">
        <TextBlock Text="Address Line 1" />
        <TextBox x:Name="txtAddress1" Margin="0,5,0,10"/>

        <TextBlock Text="Address Line 2" />
        <TextBox x:Name="txtAddress2" Margin="0,5,0,10"/>

        <TextBlock Text="City" />
        <TextBox x:Name="txtCity" Margin="0,5,0,10"/>

        <TextBlock Text="State" />
        <TextBox x:Name="txtState" Margin="0,5,0,10"/>

        <TextBlock Text="Zip" />
        <TextBox x:Name="txtZip" Margin="0,5,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="70" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
