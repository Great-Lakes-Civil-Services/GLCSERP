<UserControl x:Class="CivilProcessERP.Views.EnableDisableUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <Border Background="WhiteSmoke" Padding="20" CornerRadius="10">
        <StackPanel>
            <TextBlock Text="Enable / Disable User" FontSize="22" FontWeight="Bold" Foreground="DarkSlateBlue" Margin="0,0,0,20" />

            <TextBlock Text="Enter Username" Margin="0,0,0,5"/>
            <ComboBox x:Name="UsernameSearchComboBox"
          Width="250"
          Margin="0,10"
          IsEditable="True"
          StaysOpenOnEdit="True"
          KeyUp="UsernameSearchComboBox_KeyUp"
          DisplayMemberPath="LoginName"
          IsTextSearchEnabled="False"
          />


            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Toggle Status" Click="ToggleStatusButton_Click" Width="150" Background="DarkOrange" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Cancel" Click="CancelButton_Click" Width="100" Background="DarkRed" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
