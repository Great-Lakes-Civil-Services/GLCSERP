<Window x:Class="CivilProcessERP.Views.SetupMfaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup MFA" Height="400" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Scan this QR code with your Authenticator app:" FontWeight="Bold" Margin="0,0,0,10"/>
            <Image x:Name="QrImage" Height="200" Margin="0,10"/>
            <TextBlock Text="Or enter this secret manually:" FontWeight="Bold" Margin="0,20,0,0"/>
            <TextBlock x:Name="SecretText" FontFamily="Consolas" TextWrapping="Wrap"/>
            <Button Content="Enable MFA" Margin="0,20,0,0" Click="EnableMfa_Click"/>
        </StackPanel>
    </Grid>
</Window>
