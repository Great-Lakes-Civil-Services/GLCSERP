<Window x:Class="CivilProcessERP.Views.EditTimeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Time" Height="180" Width="300">
    <StackPanel Margin="10">
        <TextBlock x:Name="lblTitle" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <TextBox x:Name="txtTime" Margin="0,0,0,10" Width="200" HorizontalAlignment="Left" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Margin="0,0,5,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
