<Window x:Class="CivilProcessERP.Views.EditTypeOfWritSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Type of Writ" Height="350" Width="400">
    <StackPanel Margin="10">
        <TextBox x:Name="txtSearch" Margin="0,0,0,10" TextChanged="txtSearch_TextChanged"/>
        <ListBox x:Name="lstTypes" MouseDoubleClick="lstTypes_MouseDoubleClick" Height="180"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Select" Width="70" Margin="5" Click="Select_Click"/>
            <Button Content="Cancel" Width="70" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
