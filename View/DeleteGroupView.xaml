<UserControl x:Class="CivilProcessERP.Views.DeleteGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Background="LightCyan" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Delete User Group" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Select Group to Delete:" Margin="0,0,0,5"/>
            <ComboBox x:Name="GroupComboBox" Height="30" Margin="0,0,0,15"/>

            <Button Content="Delete Group"
                    Click="Delete_Click"
                    Background="Crimson"
                    Foreground="White"
                    Height="35"
                    Width="150"
                    HorizontalAlignment="Center"/>

            <TextBlock x:Name="StatusText"
                       Foreground="Red"
                       FontWeight="Bold"
                       Margin="0,20,0,0"
                       Visibility="Collapsed"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
