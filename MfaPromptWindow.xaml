<Window x:Class="CivilProcessERP.Views.MfaPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MFA Verification" Height="450" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Scan QR in your Authenticator App:" FontWeight="Bold" Margin="0,0,0,10"/>
            <Image x:Name="QrImage" Height="180" Width="180" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Then enter your 6-digit code:" Margin="0,5,0,5"/>
            <TextBox x:Name="CodeBox" MaxLength="6" HorizontalAlignment="Stretch"/>
            <Button Content="Verify" Click="Verify_Click" Margin="0,10,0,0"/>
            <TextBlock x:Name="ErrorText" Foreground="Red" Visibility="Collapsed" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
